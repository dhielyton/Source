@model Dominio.Entities.Pessoa
@{
    ViewData["Title"] = "_PartialViewDetails";
}

<div class="card-body">
    <div class="form-group">
        <label asp-for="PessoaID" class="control-label"></label>
        <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-key" aria-hidden="true"></i>
            </span>
            <input asp-for="PessoaID" class="form-control" disabled="disabled" />
        </div>
        <label asp-for="Nome" class="control-label"></label>
        <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
            </span>
            <input asp-for="Nome" class="form-control" disabled="disabled" />
        </div>

        <label asp-for="Status" class="control-label"></label>
        <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
            </span>
            <input asp-for="Status" class="form-control" disabled="disabled" />
        </div>
        <label asp-for="Observacao" class="control-label"></label>
        <br />
        <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
            </span>
            <input asp-for="Observacao" class="form-control" disabled="disabled" />
        </div>
        <div class="col-3">
            @Html.Partial("~/Views/Pessoa/_PartialViewEmprestimosDetails.cshtml",Model.OperacoesBens.Select(x => x.Bem));
        </div>
    </div>
</div>

