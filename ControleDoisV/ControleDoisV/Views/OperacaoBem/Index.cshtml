@model IEnumerable<Dominio.Entities.OperacaoBem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/lib/DataTables/media/css/jquery.dataTables.css" />
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Instituições Registradas
    </div>
    <div class="card-body">
        <table id="tabela_gruposBens">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OperacaoBemID)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoOperacaoBem)</th>
                    <th>@Html.DisplayNameFor(model => model.Data)</th>
                    <th>@Html.DisplayNameFor(model => model.Tomador)</th>
                    <th>@Html.DisplayNameFor(model => model.Bem)</th>
                    <th>@Html.DisplayNameFor(model => model.Observacao)</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OperacaoBemID)</td>
                    <td>@Html.DisplayFor(modelItem => item.TipoOperacaoBem)</td>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tomador)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bem)</td>
                    <td>@Html.DisplayFor(modelItem => item.Observacao)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.OperacaoBemID">Detalhar</a>
                    </td>
                </tr>

                }
            </tbody>
        </table>

    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Registrar uma Nova Operação</a>
    </div>
</div>
@section ScriptPage{
    <script type="text/javascript" src="~/lib/DataTables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_gruposBens').DataTable();

        })
    </script>
}
