@model Dominio.Entities.Bem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
@section styles{
    <link rel=" stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>

}
    <div class="card">
        <div class="card-header text-white bg-secondary text-center h1">
            Exibindo um Departamento existente
        </div>
        @Html.Partial("~/Views/Bem/_PartialViewDetails.cshtml", Model)
        <div class="card-footer bg-info text-center text-white">

            <input type="hidden" asp-for="BemID" />
            <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modalConfirmationDelete"> Remover Departamento</button>
            <a asp-action="Index" class="btn btn-info">Retornar a Listagem de Departamentos</a>

        </div>
        <div class="modal fade" id="modalConfirmationDelete" tabindex="-1" role="dialog"
             aria-labelledby="deleteModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModal"> Remoação de Departamento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Confirma a exclusão do Deparatamento @Model.Descricao.ToUpper()??</p>

                    </div>
                    <div class="modal-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="BemID" />
                            <input type="submit" value="Remover Bem" class="btn-primary" />
                            <button type="button" class="btn-secondary" data-dismiss="modal">Fechar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>