@model Dominio.Entities.Pessoa

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

section styles{
<link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
}

<div class="card">
    <div class="card-header text-white bg-secondary text-center h1">
        Exibido Pessoa
    </div>
    @Html.Partial("~/Views/Pessoa/_PartialViewDetails.cshtml", Model)
    <div class="card-footer bg-info text-center text-white">
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.PessoaID">Edit</a> |
        <a asp-action="Index" class="btn btn-warning">Retornar Listagem de Bens</a>
    </div>
</div>